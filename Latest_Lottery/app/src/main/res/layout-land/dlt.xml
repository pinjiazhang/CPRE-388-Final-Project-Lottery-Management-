<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADFFFD"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:textSize="40sp"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dlt_red1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/lottery_circle_red"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/dlt_red2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/lottery_circle_red"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/dlt_red3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/lottery_circle_red"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/dlt_red4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/lottery_circle_red"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/dlt_red5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/lottery_circle_red"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/dlt_blue1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/lottery_circle_blue"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/dlt_blue2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/lottery_circle_blue"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="35sp" />
    </LinearLayout>


</LinearLayout>