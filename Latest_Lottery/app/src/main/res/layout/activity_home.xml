<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="#ffffff"
    android:orientation="vertical"

    >

    <FrameLayout
        android:id="@+id/home_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/home_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <RadioButton
            android:id="@+id/latest"
            android:drawableTop="@drawable/home_index_selector"
            android:textColor="@drawable/home_selector"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:textSize="15sp"
            android:gravity="center"
            android:text="Latest"/>

        <RadioButton
            android:id="@+id/history"
            android:drawableTop="@drawable/home_history_selector"
            android:textColor="@drawable/home_selector"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:textSize="15sp"
            android:gravity="center"
            android:text="History"/>

        <RadioButton
            android:id="@+id/analysis"
            android:drawableTop="@drawable/home_analysis_selector"
            android:textColor="@drawable/home_selector"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:textSize="15sp"
            android:gravity="center"
            android:text="Analysis"/>

        <RadioButton
            android:id="@+id/util"
            android:drawableTop="@drawable/home_util_selector"
            android:textColor="@drawable/home_selector"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:textSize="15sp"
            android:gravity="center"
            android:text="Utility"/>

        <RadioButton
            android:id="@+id/account"
            android:drawableTop="@drawable/home_account_selector"
            android:textColor="@drawable/home_selector"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:textSize="15sp"
            android:gravity="center"
            android:text="Account"/>

    </RadioGroup>



</RelativeLayout>